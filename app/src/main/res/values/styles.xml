<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Login" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="titulo" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">36dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily" tools:targetApi="jelly_bean">sans-serif-light</item>
    </style>

    <style name="SubTitulo" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">32dp</item>
        <item name="android:fontFamily" tools:targetApi="jelly_bean">sans-serif-light</item>
    </style>

    <style name="cajas" >
        <item name="android:textColor">#fff</item>

        <item name="android:colorForeground">#fff</item>
        <item name="android:textColorHint">#E1FFFFFF</item>
        <item name="android:backgroundTint" tools:targetApi="lollipop">#FFFFFF</item>
    </style>

    <style name="TextInputLayoutAppearance" parent="Widget.Design.TextInputLayout">
        <!-- reference our hint & error styles -->
        <item name="hintTextAppearance">@style/HintText</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorHint">@android:color/white</item>
        <item name="colorControlNormal">@android:color/white</item>
        <item name="colorControlActivated">@android:color/white</item>
        <item name="colorControlHighlight">@android:color/white</item>
    </style>

    <style name="HintText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">14sp</item>
    </style>

</resources>
