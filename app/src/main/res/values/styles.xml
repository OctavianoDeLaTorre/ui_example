<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Login" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="titulo" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">36dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily" tools:targetApi="jelly_bean">serif</item>
    </style>

    <style name="SubTitulo" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">32dp</item>
        <item name="android:fontFamily" tools:targetApi="jelly_bean">serif</item>
    </style>

    <style name="cajas">
        <item name="android:textColor">#fff</item>
        <item name="android:colorForeground">#fff</item>
        <item name="android:textColorHint">#E1FFFFFF</item>
        <item name="android:backgroundTint" tools:targetApi="lollipop">#FFFFFF</item>
        <item name="android:textCursorDrawable">@null</item>
    </style>

    <style name="TextInputLayoutAppearance" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <!-- reference our hint & error styles -->
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorHint">@android:color/white</item>
        <item name="colorControlNormal">@android:color/white</item>
        <item name="colorControlActivated">@android:color/white</item>
        <item name="colorControlHighlight">@android:color/white</item>
        <item name="boxStrokeColor">#fff</item>
        <item name="colorAccent">#fff</item>
        <item name="colorSecondary">#fff</item>
        <item name="colorPrimaryDark">#fff</item>
        <item name="colorPrimary">#fff</item>
        <item name="hintTextColor">#fff</item>
    </style>

    <style name="HintText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColorHint">#fff</item>
    </style>

    <style name="Botones" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:backgroundTint" tools:targetApi="lollipop">#FFFFFF</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="select" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="android:colorForeground">#fff</item>
        <item name="android:backgroundTint" tools:targetApi="lollipop">#FFFFFF</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorHint">@android:color/white</item>
        <item name="colorControlNormal">@android:color/white</item>
        <item name="colorControlActivated">@android:color/white</item>
        <item name="colorControlHighlight">@android:color/white</item>
        <item name="boxStrokeColor">#fff</item>
        <item name="colorAccent">#fff</item>
        <item name="colorSecondary">#fff</item>
        <item name="colorPrimaryDark">#fff</item>
        <item name="colorPrimary">#fff</item>
        <item name="hintTextColor">#fff</item>
    </style>

    <style name="lineButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="boxStrokeColor">#fff</item>
        <item name="colorAccent">#fff</item>
        <item name="colorSecondary">#fff</item>
        <item name="colorPrimaryDark">#fff</item>
        <item name="colorPrimary">#fff</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="strokeColor">#fff</item>
    </style>


    <style name="Botones.menu" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:backgroundTint" tools:targetApi="lollipop">#FFFFFF</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">25dip</item>
        <item name="android:drawableTint" tools:targetApi="m">@color/colorPrimary</item>
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">150dp</item>
    </style>
</resources>
